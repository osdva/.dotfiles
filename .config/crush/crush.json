{
	"$schema": "https://charm.land/crush.json",
	"options": {
		"skills_paths": ["~/.agents/skills"],
		"initialize_as": "AGENTS.md",
		"attribution": {
			"trailer_style": "assisted-by",
			"generated_with": false
		}
	},
	"lsp": {},
	"mcp": {
		"context7": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"@upstash/context7-mcp",
				"--api-key",
				"$(echo $CONTEXT7_API_KEY)"
			],
			"disabled": false
		}
	},
	"permissions": {
		"allowed_tools": [
			"view",
			"ls",
			"grep",
			"edit",
			"curl",
			"fetch",
			"bash",
			"mcp_context7_get-library-doc"
		]
	}
}
