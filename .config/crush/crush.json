{
	"$schema": "https://charm.land/crush.json",
	"lsp": {
		"elixir": {
			"command": "expert",
			"args": ["--stdio"]
		},
		"typescript": {
			"command": "typescript-language-server",
			"args": ["--stdio"]
		}
	},
	"mcp": {
		"context7": {
			"type": "local",
			"command": "npx",
			"args": ["-y", "@upstash/context7-mcp", "--api-key", "$CONTEXT7_API_KEY"],
			"disabled": false
		}
	},
	"permissions": {
		"allowed_tools": [
			"view",
			"ls",
			"grep",
			"edit",
			"curl",
			"mcp_context7_get-library-doc"
		]
	}
}
